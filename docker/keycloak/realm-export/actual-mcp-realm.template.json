{
  "realm": "${KEYCLOAK_REALM}",
  "enabled": true,
  "sslRequired": "none",
  "clients": [
    {
      "clientId": "${KEYCLOAK_PUBLIC_CLIENT_ID}",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": false,
      "bearerOnly": false,
      "redirectUris": [
        "${MCP_PUBLIC_URL_BASE}/*",
        "http://localhost:4173/*"
      ],
      "webOrigins": [
        "+"
      ],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      }
    },
    {
      "clientId": "${KEYCLOAK_INTROSPECTION_CLIENT_ID}",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "${KEYCLOAK_INTROSPECTION_CLIENT_SECRET}",
      "standardFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": true,
      "bearerOnly": false
    }
  ],
  "users": [
    {
      "username": "${KEYCLOAK_DEMO_USER}",
      "firstName": "${KEYCLOAK_DEMO_FIRST_NAME}",
      "lastName": "${KEYCLOAK_DEMO_LAST_NAME}",
      "enabled": true,
      "emailVerified": true,
      "email": "${KEYCLOAK_DEMO_USER}@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "${KEYCLOAK_DEMO_PASSWORD}",
          "temporary": false
        }
      ],
      "requiredActions": []
    }
  ]
}
